{
  "version": "0.2.0",
  "configurations": [
    {
      "name": ".NET Core Launch (web) - Development",
      "type": "coreclr",
      "request": "launch",
      "preLaunchTask": "build",
      "program": "${workspaceFolder}/HrApp.MVC/bin/Debug/net6.0/HrApp.MVC.dll",
      "args": [],
      "cwd": "${workspaceFolder}/HrApp.MVC",
      "serverReadyAction": {
        "action": "openExternally",
        "pattern": "\\bNow listening on:\\s+(https?://\\S+)"
      },
      "env": {
        "ASPNETCORE_ENVIRONMENT": "Development"
      },
      "sourceFileMap": {
        "/Views": "${workspaceFolder}/Views"
      },
      "hotReloadProfile": "aspnetcore"
    },
    {
      "name": ".NET Core Launch (web) - Staging",
      "type": "coreclr",
      "request": "launch",
      "preLaunchTask": "build",
      "program": "${workspaceFolder}/HrApp.MVC/bin/Debug/net6.0/HrApp.MVC.dll",
      "args": [],
      "cwd": "${workspaceFolder}/HrApp.MVC",
      "serverReadyAction": {
        "action": "openExternally",
        "pattern": "\\bNow listening on:\\s+(https?://\\S+)"
      },
      "env": {
        "ASPNETCORE_ENVIRONMENT": "Staging"
      },
      "sourceFileMap": {
        "/Views": "${workspaceFolder}/Views"
      },
      "hotReloadProfile": "aspnetcore"
    },
    {
      "name": ".NET Core Launch (web) - Production",
      "type": "coreclr",
      "request": "launch",
      "preLaunchTask": "build",
      // Yolunuzun projenizin Production derleme çıktısını yansıttığından emin olun
      "program": "${workspaceFolder}/HrApp.MVC/bin/Release/net6.0/HrApp.MVC.dll",
      "args": [],
      "cwd": "${workspaceFolder}/HrApp.MVC",
      "env": {
        "ASPNETCORE_ENVIRONMENT": "Production"
      },
      "sourceFileMap": {
        "/Views": "${workspaceFolder}/Views"
      }
      // Hot reload genellikle Production için kullanılmaz
    },
    {
      "name": ".NET Core Attach",
      "type": "coreclr",
      "request": "attach"
    }
  ]
}
