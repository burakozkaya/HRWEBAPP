@using HrApp.MVC.Models.Advance
@using System.Security.Claims


@model UpdateAdvanceViewModel

<div class="container">
    <form asp-action="Update" method="post">
        <div asp-validation-summary="ModelOnly"></div>

        <input type="hidden" asp-for="Id" />
        <input type="hidden" asp-for="AppUserId" value="@User.FindFirstValue("nameid")" /> @* cookieden AppUserId çekilecek ve valueya yazılacak! *@

        <div class="form-group mb-2">
            <label asp-for="AdvanceTypeId" class="text-dark">Advance Types</label>
            <select class="form-control" asp-for="AdvanceTypeId" asp-items="@ViewBag.AdvanceTypes"></select>
            <span asp-validation-for="AdvanceTypeId" class="text-danger"></span>
        </div>

        <div class="form-group mb-2">
            <label asp-for="CurrencyId" class="text-dark">Currencies</label>
            <select class="form-control" asp-for="CurrencyId" asp-items="@ViewBag.Currencies"></select>
            <span asp-validation-for="CurrencyId" class="text-danger"></span>
        </div>

        <div class="form-group mb-2">
            <label asp-for="Amount" class="text-dark">Amount</label>
            <input asp-for="Amount" class="form-control" min="1"/> @* max değeri kullancıya göre belirlenecek *@
            <span asp-validation-for="Amount" class="text-danger"></span>
        </div>

        <div class="form-group mb-2">
            <label asp-for="RequestDate" class="text-dark">Request Date</label>
            <input asp-for="RequestDate" class="form-control" />
            <span asp-validation-for="RequestDate" class="text-danger"></span>
        </div>

        <div class="form-group mb-2">
            <label asp-for="Description" class="text-dark">Description</label>
            <input asp-for="Description" class="form-control" />
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>

        <div class="form-group text-center">
            <button type="submit" class="btn btn-primary">Update</button>
        </div>
    </form>
</div>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}