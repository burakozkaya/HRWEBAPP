@using HrApp.MVC.Models.Expense
@using System.Security.Claims

@model CreateExpenseViewModel

<div class="container">
    <div class="login-form login-form-left">
        <div class="agile-row">
            <div class="login-agileits-top">
                <form asp-action="Create" enctype="multipart/form-data" method="post">
                    <div asp-validation-summary="ModelOnly"></div>
                    <input type="hidden" asp-for="AppUserId" value="@User.FindFirstValue("nameid")" /> @* cookieden AppUserId çekilecek ve valueya yazılacak! *@
                    <div class="form-group">
                        <label asp-for="ExpenseTypeId">Expense Types</label>
                        <select class="form-control" asp-for="ExpenseTypeId" asp-items="@ViewBag.ExpenseTypes"></select>
                        <span asp-validation-for="ExpenseTypeId" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="CurrencyId">Currencies</label>
                        <select class="form-control" asp-for="CurrencyId" asp-items="@ViewBag.Currencies"></select>
                        <span asp-validation-for="CurrencyId" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Amount">Advance Amount</label>
                        <input asp-for="Amount" class="form-control" min="1" max="10000" step="1" /> @* max değer belirlenecek *@
                        <span asp-validation-for="Amount" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="File" class="control-label">File</label>
                        <input asp-for="File" type="file" class="form-control-file" accept=".jpg , .jpeg , .png, .pdf" />
                        <span asp-validation-for="File" class="text-danger"></span>
                    </div>
                    <input type="submit" value="Add">
                </form>
            </div>
        </div>
    </div>

    <div class="container">
        <div class="text-center">
            <h5 class="section-title ff-secondary text-center text-primary fw-normal">Expenses</h5>
        </div>
    </div>

    <table class="grid table text-dark" id="Expenses">
        <thead>
            <tr>
                <th>Id</th>
                <th>Expense Type</th>
                <th>Amount</th>
                <th>Currency</th>
                <th>Approval Status</th>
                <th>Approval Date</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @{
                if (ViewBag.Expenses != null)
                {
                    @foreach (var advance in ViewBag.Expenses)
                    {
                        <tr>
                            <td>@advance.Id</td>
                            <td>@advance.ExpenseTypeName</td>
                            <td>@advance.Amount</td>
                            <td>@advance.Currency</td>
                            <td>@advance.ApprovalStatus</td>
                            <td>@advance.ApprovalDate.ToString("dd/MM/yyyy")</td>
                            <td>
                                <a class="details btn btn-dark">Get Expense</a>
                            </td>
                        </tr>
                    }
                }
            }
        </tbody>
    </table>
</div>
<div class="modal fade" id="partialModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Expense</h5>
                <button type="button" class="fa fa-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                ...
            </div>
            <div class="modal-footer">
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script type="text/javascript">
        $(function () {
            $("#Expenses .details").click(function () {
                var id = $(this).closest("tr").find("td").eq(0).html();

                $.ajax({
                    type: "GET",
                    url: "/Expense/Read",
                    data: { "id": id },
                    success: function (response) {
                        $("#partialModal").find(".modal-body").html(response);
                        $("#partialModal").modal('show');
                    },
                    failure: function (response) {
                        alert(response.responseText);
                    },
                    error: function (response) {
                        alert(response.responseText);
                    }
                });
            });
        });
    </script>
}