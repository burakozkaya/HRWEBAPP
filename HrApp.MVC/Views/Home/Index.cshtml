@{
    ViewData["Title"] = "Home Page";
}
@model AppUserHomeViewModel

@* <!-- Main content -->
<section class="content mb-1 mt-5">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <!-- /.card-header -->
                    <div class="card-body">
                        <table id="example2" class="table table-bordered" id="Personels">
                            <thead>
                                <tr>
                                    <th>Photo</th>
                                    <th>Name</th>
                                    <th>SecondName</th>
                                    <th>Surname</th>
                                    <th>SecondSurname</th>
                                    <th>Department</th>
                                    <th>Ocuppation</th>
                                    <th>Email</th>
                                    <th>MobileNumber</th>
                                    <th>Details</th>
                                </tr>
                            </thead>
                            <tbody>
                            <tr>
                                @{
                                    if (@Model != null)
                                    {
                                        <td><img src="@Model.Image" width="150" height="150" /></td>
                                        <td>@Model.Name</td>
                                        <td>@Model.SecondName</td>
                                        <td>@Model.Surname</td>
                                        <td>@Model.SecondSurname</td>
                                        <td>@Model.Department</td>
                                        <td>@Model.Occupation</td>
                                        <td>@Model.Email</td>
                                        <td>@Model.MobileNumber</td>
                                        <td>
                                        <a asp-controller="Personnel" asp-action="Details" class="details btn btn-dark">Details</a>
                                        </td>
                                    }
                                }
                            </tr>
                        </table>
                    </div>
                </div>
                <!-- /.card -->
            </div>
            <!-- /.col -->
        </div>
        <!-- /.row -->
    </div>
    <!-- /.container-fluid -->
</section>
<!-- /.content --> *@
<div class="container">
    <div class="d-flex justify-content-center">
        
        <div class="col-8">
        </div>
<div class="col-8">
    <div class="d-flex text-center" style="justify-content:flex-end;">
        <partial name="_PersonelPartialView" />
    </div>
</div>
</div>
</div>