@model AppUserUpdateViewModel

<style>

    input::-webkit-outer-spin-button,
    input::-webkit-inner-spin-button {
        -webkit-appearance: none;
        margin: 0;
    }

    /* Firefox */
    input[type=number] {
        -moz-appearance: textfield;
    }
</style>

<div class="container">
    <form asp-action="Update" enctype="multipart/form-data" method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <input type="hidden" asp-for="Id" class="form-control" />
        </div>
        <div class="form-group mb-2">
            <label asp-for="Address"></label>
            <input asp-for="Address" class="form-control" />
            <span asp-validation-for="Address" class="text-danger"></span>
        </div>

        <div class="form-group mb-4">
            <label asp-for="MobileNumber"></label>
            <input type="number" asp-for="MobileNumber" class="form-control"/>
            <span asp-validation-for="MobileNumber" class="text-danger"></span>
        </div>

        <div class="form-group mb-4">
            <label asp-for="NewImage" class="text-dark">Photo</label>
            <input asp-for="NewImage" class="form-control" />
            <span asp-validation-for="NewImage" class="text-danger"></span>
        </div>

        <div class="form-group text-center">
            <button type="submit" class="btn btn-primary">Update</button>
            <a asp-controller="Personnel" asp-action="Details" class="btn btn-primary">Detaylar</a>
        </div>
    </form>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}