@model AppUserPasswordChangeViewModel

<head>
    <style>
        .login-page {
            align-items: center;
            display: flex;
            flex-direction: column;
            justify-content: center;
            min-height: 100vh;
            margin-top: 5%;
        }

        .login-box,
        .register-box {
            width: 100%;
            max-width: 360px;
            margin: 0 auto;
        }

        .field-icon {
            cursor: pointer;
        }
    </style>
</head>

<body class="login-page" style="min-height: 386.781px;">
    <div class="row">
        <div class="col-12 position-absolute">
            <img src="~/AdminLTE-3.1.0/dist/img/humanresources.jpg" class="w-100" style="object-fit:contain">
        </div>
    </div>
    <div class="login-box">
        <div class="login-logo position-sticky mt-4">
            <a href="/"><b>Human</b>Resources</a>
        </div>
        <div class="card">
            <div class="card-body login-card-body">
                <p class="login-box-msg">You are only one step a way from your new password.
                </p>
                <form asp-action="PasswordChange" method="post">
                    <div class="input-group mb-3">
                        <input asp-for="Password" type="password" class="form-control" placeholder="Password">
                        <div class="input-group-append">
                            <div class="input-group-text">
                                <span class="fas fa-lock"></span>
                            </div>
                        </div>
                        <div>
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="input-group mb-3">
                        <input asp-for="ConfirmPassword" type="password" class="form-control"
                            placeholder="Confirm Password">
                        <div class="input-group-append">
                            <div class="input-group-text">
                                <span class="fas fa-lock"></span>
                            </div>
                        </div>
                        <div>
                            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-12">
                            <button type="submit" class="btn btn-primary btn-block">Change password</button>
                        </div>

                    </div>
                </form>
                <p class="mt-3 mb-1">
                    <a asp-action="Login" asp-controller="Home">Login</a>
                </p>
            </div>
        </div>
    </div>
</body>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}